<div class="column is-half">
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/64x64.png">
            </p>
        </figure>
        <div class="media-content">
            <%= render 'tweets/form' %>
        </div>
    </article>

    <% @tweets.each do | tweet | %>
        <div class="box">
            <article class="media">
                <div class="media-left">
                    <figure class="image is-64x64">
                        <img src="https://bulma.io/images/placeholders/64x64.png">
                    </figure>
                </div>
                <div class="media-content">
                    <div class="content">
                        <strong><%= tweet.user.name %></strong><br />
                        <small>@<%= tweet.user.username %></small><br />
                        <p><%= tweet.content %></p>
                    </div>
                    <nav class="level">
                        <div class="level-left is-mobile">
                            <%= link_to tweet, class: "level-item" do %>
                                <span class="icon">üîó</i></span>
                            <% end %>

                            <% if current_user === tweet.user %>
                                <%= link_to edit_tweet_path(tweet), class: "level-item" do %>
                                    <span class="icon">‚úèÔ∏è</span>
                                <% end %>
                                <%= link_to tweet, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this tweet?" 
                                    } do %>
                                        <span class="icon">üóë</span>
                                <% end %>
                            <% end %>

                            <% like = current_user.likes.find_by(tweet: tweet) %>
                            <% if like.nil? %>
                                <%= button_to "ü§ç", likes_path, params: { like: {tweet_id: tweet.id }}, method: :post %>
                            <% else %>
                                <%= button_to "‚ù§Ô∏è", like_path(like), method: :delete %>
                            <% end %>
                            <%= tweet.likes.count %>
                        </div>
                    </nav>
                </div>
            </article>
        </div>
    <% end %>
</div>